{
  "name": "async-toolbox",
  "version": "0.1.0",
  "description": "A toolbox of utilities to help with async (promise-based) transformations",
  "main": "index.js",
  "scripts": {
    "lint": "tslint 'src/**/*.ts'",
    "test-cover": "tsc --project tsconfig.test.json && nyc mocha 'src/**/*.test.js'",
    "test-node": "mocha --require ts-node/register src/*.test.ts src/**/*.test.ts",
    "test-browser": "npm run clean && karma start",
    "test-watch": "nodemon --watch src/ -e ts --exec 'npm run test-node || echo \"failed\"'",
    "coverage": "npm run test-cover && nyc report --reporter=html && open coverage/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "tsc",
    "prepare": "npm run build",
    "clean": "rm -rf dist; bash -c 'shopt -s globstar; rm src/**/*.js src/**/*.map src/**/*.d.ts'; true"
  },
  "keywords": [
    "async",
    "stream",
    "monad"
  ],
  "author": "Gordon Burgett (gordon@gordonburgett.net)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-typescript": "^7.3.3",
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "awesome-ts-loader": "^1.3.1",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "globby": "^9.0.0",
    "karma": "^4.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.4",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  }
}
